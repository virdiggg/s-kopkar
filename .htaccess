RewriteEngine On

# Prefer HTTPS
# RewriteCond %{HTTPS} off
# RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

RewriteCond $1 !^(index\.php|resources|robots\.txt|public)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?/$1 [QSA,L]

# Block access to .gitignore and other sensitive files
<FilesMatch "(\.gitignore|\.git|\.htaccess|.dockerignore|composer.json|composer.lock|README.MD|Dockerfile)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to the .git directory
RedirectMatch 404 /\.git

# Deny access to specific files
<FilesMatch "(^|/)\.git">
    Require all denied
</FilesMatch>